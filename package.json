{
  "name": "tg-bot",
  "version": "1.0.0",
  "description": "tg-bot",
  "private": true,
  "license": "MIT",
  "scripts": {
    "typeorm": "typeorm-ts-node-esm -d dist/apps/webapp/apps/webapp/src/ormconfig.js",
    "typeorm:migration:generate": "npm run typeorm -- migration:generate ./src/migrations/migration",
    "typeorm:migration:run": "npm run typeorm -- migration:run",
    "typeorm:migration:revert": "npm run typeorm -- migration:revert",
    "prebuild": "rimraf dist",
    "app:build:server": "npm run prebuild && nest build --tsc webapp",
    "app:build:client": "npm -w client run generate",
    "app:build": "npm run app:build:server & npm run app:build:client",
    "app:start": "nest start ---tsc webapp",
    "app:start:dev:server": "nest start --debug --watch ---tsc webapp",
    "app:start:dev:client": "npm -w client run dev",
    "app:start:dev": "npm run start:dev:server && npm run start:dev:client",
    "app:start:prod": "node dist/apps/webapp/apps/webapp/src/main",
    "bot:build": "npm run prebuild && nest build --tsc bot",
    "bot:start": "nest start ---tsc bot",
    "bot:start:dev": "nest start --debug --watch ---tsc bot",
    "bot:start:prod": "node dist/apps/bot/src/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/jest/bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.2",
    "@nestjs/core": "^10.3.2",
    "@nestjs/platform-express": "^10.3.2",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/config": "^3.2.2",
    "@nestjs/typeorm": "^10.0.2",
    "@nestjs/websockets": "^10.3.8",
    "@nestjs/platform-socket.io": "^10.3.8",
    "@nestjs/microservices": "^10.3.8",
    "@nestjs/axios": "^3.0.2",
    "axios": "^1.6.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "reflect-metadata": "^0.2.1",
    "node-telegram-bot-api": "^0.65.1",
    "@types/node-telegram-bot-api": "^0.64.6",
    "amqplib" : "0.10.4",
    "@types/amqplib": "^0.10.5",
    "amqp-connection-manager": "^4.1.14",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.1",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.2",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@my/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  },
  "workspaces": [
    "apps/webapp/client"
  ]
}
